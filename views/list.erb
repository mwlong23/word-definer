<form action= '/' method="post">
  <div class="form-group">
    <label for="vocabulary_word">Enter a new Word:</label>
    <input class="form-control" type="text" name="vocabulary_word" id="word">
  </div>
  <div class="form-group">
    <label for="word_definition">Enter a definition:</label>
    <input class="form-control" type="text" name="definition" id="word_definition">
  </div>
  <button type="submit">Submit</button>
</form>

<h2>Your List of Vocabulary Words:</h2>

<% @list.each do |vocab_word| %>
  <a href='/words/<%=vocab_word.id%>'><%=vocab_word.vocabulary_word%></a>
<% end %>
